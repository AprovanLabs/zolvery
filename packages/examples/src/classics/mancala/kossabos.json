{
  "appId": "classics/mancala",
  "name": "Mancala",
  "description": "A two-player turn-based strategy board games played with small stones",
  "runnerTag": "boardgameio",
  "links": ["https://en.wikipedia.org/wiki/Mancala"],
  "version": "0.0.1",
  "authorId": "jsampson",
  "visibility": "public",
  "tags": ["game", "classics"],
  "servers": ["kossabos/games"],
  "players": { "min": 2, "max": 2, "maxLocal": 2 },
  "settings": [
    {
      "id": "bot-count",
      "label": "Number of Bots",
      "type": "number",
      "min": 0,
      "max": 1,
      "default": 1
    },
    {
      "id": "bot-difficulty",
      "label": "Bot Difficulty",
      "options": [
        { "value": "easy", "label": "Easy" },
        { "value": "medium", "label": "Medium" },
        { "value": "hard", "label": "Hard" }
      ],
      "default": "medium"
    }
  ]
}
