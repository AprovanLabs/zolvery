{
  "name": "kossabos",
  "packageManager": "pnpm@9.14.4",
  "scripts": {
    "prepare": "husky install",
    "check-types": "tsc --noEmit",
    "setup": "tailscale up",
    "expose": "tailscale serve --http 3701 localhost:3700",
    "expose:public": "tailscale funnel localhost:3700",
    "watch": "pnpx turbo watch dev --filter=@kossabos/client --filter=@kossabos/server --filter=@kossabos/examples",
    "dev": "./scripts/start-local.sh && $_ npm run expose & $_ npm run watch",
    "dev:api": "./scripts/start-local.sh && pnpx turbo watch dev --filter=@kossabos/server",
    "dev:public": "./scripts/start-local.sh $_ npm run expose:public & $_ npm run watch",
    "app:build": "pnpx turbo run build --filter=@kossabos/client",
    "mobile:build": "pnpm --filter @kossabos/mobile run build",
    "mobile:sync": "pnpm --filter @kossabos/mobile run sync:android",
    "mobile:run": "pnpm --filter @kossabos/mobile run run:android",
    "mobile:android:regen": "pnpm --filter @kossabos/mobile run android:regen",
    "core:build": "pnpx turbo run build --filter=@kossabos/core",
    "core:test": "pnpx turbo run test --filter=@kossabos/core",
    "docs:serve": "pnpx turbo run serve --filter=@kossabos/docs",
    "docs:build": "pnpx turbo run build --filter=@kossabos/docs",
    "e2e:test": "pnpx turbo run test --filter=@kossabos/e2e",
    "eslint": "eslint --fix \"**/*.ts?(x)\"",
    "prettier": "prettier --write .",
    "release": "pnpx recursive publish --filter './packages/*' --no-git-checks --report-summary && pnpx @changesets/cli publish",
    "changesets": "pnpx @changesets/cli"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^8.57.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^5.7.2",
    "vitest": "2.1.5",
    "node-turn": "^0.0.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,scss}": "prettier --write"
  }
}
